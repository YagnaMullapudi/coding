// User function template for Java

class Solution {
    static String delAlternate(String S) {
        StringBuilder sb = new StringBuilder();
        
        for (int i = 0; i < S.length(); i++) {
            // keep only even indices
            if (i % 2 == 0) {
                sb.append(S.charAt(i));
            }
        }
        
        return sb.toString();
    }
}
